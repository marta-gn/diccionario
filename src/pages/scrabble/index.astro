---
import Layout from '../../layouts/Layout.astro';
import Tornar from '../../components/Tornar.astro';

if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData()
  const inici = data.get('inici')
  console.log(inici)
  return Astro.redirect('/scrabble/'+inici)
}

---

<Layout titol="Scrabble">
    
    <Tornar url="/" />

<div class="flex items-center justify-center">
  <form method='post'>
    <input type='text' placeholder="Buscar" class="bg-white shadow-md rounded px-8 pt-4 pb-3 mb-4" name='inici'/>

    <button class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">Enviar</button>
  </form>
</div>


    


   
</Layout>


